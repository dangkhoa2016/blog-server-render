<div class="hero-wrap hero-wrap-2 js-fullheight" style="{{{ ext_BgImage '/images/bg_1.jpg' }}}"
    data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="js-fullheight d-flex justify-content-center align-items-center ftco-animate">
        <div class="col-md-8 text text-center">
            <div class="img mb-4" style="{{{ ext_BgImage '/images/author.jpg' }}}"></div>
            <div class="desc">
                <h2 class="">Hello I'm</h2>
                <h1 class="mb-4">Dang Khoa</h1>
                <p class="mb-4">I am A Blogger Far far away, behind the word mountains, far from the
                    countries Vokalia and Consonantia, there live the blind texts. Separated they live in
                    Bookmarksgrove right at the coast of the Semantics, a large language ocean.</p>
                <ul class="ftco-social mt-3">
                    <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                    <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                    <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section" id="blogs-list">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                {{#if posts}}
                <div class="row">
                    {{#each posts}}
                    <div class="col-md-6">
                        <div class="blog-entry ftco-animate">
                            <a href="{{../type}}/{{./id}}" class="img img-2" style="{{{ ext_BgImage ./photo }}}"></a>
                            <div class="text text-2 pt-2 mt-3">
                                <span class="category mb-3 d-block"><a href="#">Technology</a></span>
                                <h3 class="mb-4">
                                    <a href="{{../type}}/{{./id}}">{{./title}}</a>
                                </h3>
                                <p class="mb-4">{{./summary}}</p>
                                <div class="author mb-4 d-flex align-items-center">
                                    <a href="#" class="img" style="{{{ ext_BgImage '/images/person_2.jpg' }}}"></a>
                                    <div class="ml-3 info">
                                        <span>Written by</span>
                                        <h3><a href="#">{{#if ./user}}{{./user.name}}{{else}}{{./author.name}}{{/if}}</a>,
                                            <span>{{ formatShortDate ./createdAt }}</span></h3>
                                    </div>
                                </div>
                                <div class="meta-wrap align-items-center">
                                    <div class="half order-md-last">
                                        <p class="meta">
                                            <span><i class="icon-heart"></i> {{ ext_RandomCount }}</span>
                                            <span><i class="icon-eye"></i> {{ ext_RandomCount }}</span>
                                            <span><i class="icon-comment"></i> {{ ./comments.length }}</span>
                                        </p>
                                    </div>
                                    <div class="half">
                                        <p>
                                            <a href="{{../type}}/{{./id}}" class="btn py-2">Continue Reading <span class="ion-ios-arrow-forward"></span></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="mb-5" v-else>
                    <b>No posts found!</b>
                </div>
                {{/if}}
                
                <div class="row">
                    <div class="col">
                        <div class="block-27">
                            <a href="{{#ifCond page_index 1}}#{{else}}/{{./type}}?page_index={{calculate page_index '-' 1}}{{/ifCond}}" class="btn btn-primary p-2 px-xl-3 py-xl-2">Prev page</a>
                            {{#if posts }}<a href="/{{./type}}?page_index={{calculate page_index '+' 1}}" class="btn btn-primary p-2 px-xl-3 py-xl-2 ml-2">Next page</a>{{/if}}
                        </div>
                    </div>
                </div>
            </div>

            
            {{> rightbar}}
        </div>
    </div>
</section>